<div class="container">
  <h1><%=@cocktail.name%></h1>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> - <%= dose.ingredient.name %></p>
  <p>
    <%= link_to "Delete the dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
  <% end %>

  <%= link_to "Go back to cocktail's list", cocktails_path %>
  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
</div>
