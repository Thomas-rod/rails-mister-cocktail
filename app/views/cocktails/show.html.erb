<div class="container">
  <h1><%=@cocktail.name%></h1>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> - <%= dose.ingredient.name %></p>
  <p>
    <%= link_to "Delete the dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
  <% end %>

  <%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>
  <%= cl_image_tag("IMAGE_WITH_FACE_ID",
  width: 150, height: 150, crop: :thumb, gravity: :face) %>

  <%= link_to "Go back to cocktail's list", cocktails_path %>
  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
</div>
